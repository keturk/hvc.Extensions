<Project Sdk="Microsoft.NET.Sdk">

  <PropertyGroup>
    <TargetFramework>net6.0</TargetFramework>
    <ImplicitUsings>enable</ImplicitUsings>
    <Nullable>enable</Nullable>
    <GeneratePackageOnBuild>True</GeneratePackageOnBuild>
    <Title>hvc.Extensions</Title>
    <Description>Contains various extension classes for .NET Core BCL</Description>
    <Copyright>Kamil Ercan Turkarslan</Copyright>
    <PackageProjectUrl>https://github.com/keturk/hvc.Extensions</PackageProjectUrl>
    <PackageTags>C# String BCL Extensions</PackageTags>
    <PackageLicenseFile>License.txt</PackageLicenseFile>
    <Authors>Kamil Ercan Turkarslan</Authors>
    <Company>Kamil Ercan Turkarslan</Company>
  </PropertyGroup>

  <ItemGroup>
    <PackageReference Include="PluralizeService.Core" Version="1.2.21147.2" />
  </ItemGroup>

  <ItemGroup>
    <None Update="License.txt">
      <Pack>True</Pack>
      <PackagePath>\</PackagePath>
    </None>
  </ItemGroup>

</Project>
